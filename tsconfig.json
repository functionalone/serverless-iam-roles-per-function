{
  "compileOnSave": true,
  "compilerOptions": {
    "strict": true,
    "noUnusedLocals": true,
    "outDir": "./dist",
    "declaration": true,
    "rootDir": "src",
    "target": "es6",
    "moduleResolution": "node",
    "module": "commonjs",
    "esModuleInterop": true,
    "sourceMap": true,
    "newLine": "LF",
    "lib": [
      "es6",
      "es2015.promise",
      "esnext.asynciterable"
    ]
  },
  "exclude": [
    "node_modules",
    "dist"
  ]
}
